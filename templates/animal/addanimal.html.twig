{% extends "base_back.html.twig" %}
{%block body%}

{{ form_start(form,{attr:{novalidate:'novalidate'}} )}}
  <div style="display: flex; justify-content: center;">
    <div class="card"  style="width: 18rem;align-items: center;justify-content: center;margin-top: 150px;padding: 10px; "   >
      <div class="form-group">
        <label for="exampleInputcategorie">Categorie</label>
        
        {{ form_widget(form.Categorie,{'attr':{'class':'form-control'}}) }}
        {{ form_errors(form.Categorie,{'attr':{'class':'form-danger'}}) }}

      </div>
      <div class="form-group">
        <label for="exampleInputpoid">Poid</label>
        
        {{ form_widget(form.Poid,{'attr':{'class':'form-control'}}) }}
        {{ form_errors(form.Poid,{'attr':{'class':'form-danger'}}) }}
        
      </div>
      <div class="form-group">
        <label for="exampleInputEtat">Etat</label>
        
        {{ form_widget(form.Etat,{'attr':{'class':'form-control'}}) }}
        {{ form_errors(form.Etat,{'attr':{'class':'form-danger'}}) }}

      </div>
      <div class="form-group" >
        <label for="exampleInputreserve">ID Reserve</label>
        
        {{ form_widget(form.reserve,{'attr':{'class':'form-control'}}) }}
        
      </div>
      <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center;padding: 10px;">
        {{ form_widget(form.save,{'attr':{'class':'btn btn-primary'}}) }}
      </div>
    <div> <a class="btn btn-success" href="{{path('app_animal')}}">afficher les animaux</a></div>
       
    </div>
  </div>
  


  {{form_end(form)}}



{% endblock %}