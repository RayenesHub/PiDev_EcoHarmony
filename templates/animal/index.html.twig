{% extends 'base_back.html.twig' %}

{% block title %}Hello ReserveController!{% endblock %}

{% block body %}
<div class="row" style="display: flex;align-items:center ;justify-content: center;margin-top: 150px;">
    <div class="col-lg-15">
        <div class="card">
          <div class="card-body">
              <a href="{{path('addformanimal')}} "><i class="fa fa-arrow-circle-left" style="font-size: 150 px;"></i></a>
    <table class="table table-striped">
        <thead>
            <th>Categorie</th>
            <th>Poid</th>
            <th>Etat</th>
            <th>Reserve</th>
            <th>Description</th>
            <th>Modifier</th>
            <th>supprimer</th>
        </thead>
        <tbody>
            {% for animal in animal %}
            <tr>
         <td> <img src={{animal.imageLink}} alt="Description de l'image" width="100" height="100"></td>
            <td>{{animal.Categorie}}</td>
            <td>{{animal.Poid}}</td>
            <td>{{animal.Etat}}</td>
            <td>{{ animal.Description}}</td>
            <td>{{ animal.reserve.ID}}</td>
            <td> <a class="btn btn-success" href="{{ path('editanimal',{'id':animal.id})}}">modifier</a> </td>
            <td> <a class="btn btn-danger" href="{{ path('deleteanimal',{'id':animal.id})}}">supprimer</a> </td>
            
        </tr>
        
         {% endfor %}
        </tbody>
        
        
        
        </table>
        <div><a class="btn btn-danger" href="{{ path('app_frontanimal')}}">afficher dans le front</a></div>
        
          </div>
        </div>
    </div>
</div>       
        <style>
            .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
            .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        </style>
        



</div>


{% endblock %}