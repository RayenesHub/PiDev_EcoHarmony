                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                    <h1 style="text-align: center; margin-top: 30px; margin-bottom: 20px;">Liste des événements</h1>
                    <a style="margin-left: 20px;" href="{{ path('app_index')}}" class="btn btn-primary">Front</a>
                    <a style="margin-left: 0px;" href="{{ path('app_adminAddEvent')}}" class="btn btn-primary">Ajouter évènement</a>
    <a style="margin-left: 0px;" href="{{ path('app_adminAddParticipant')}}" class="btn btn-primary">Ajouter Participant</a>
    <a style="margin-left: 750px;" href="{{ path('app_pdfEvent')}}" class="btn btn-primary">Générer PDF</a>
    {% if events is empty %}
        <p>Aucun événement trouvé.</p>
    {% else %}

    <style>
        #tableau-specifique {
            border-collapse: collapse;
            width: 100%;
            margin: 20px auto; /* Centrer le tableau horizontalement avec une marge */
        }

        #tableau-specifique th,
        #tableau-specifique td {
            border: 1px solid #ddd; /* Utilisation d'une couleur de bordure plus douce */
            padding: 12px;
            text-align: left;
        }

        #tableau-specifique th {
            background-color: #f2f2f2;
            color: #333; /* Couleur de texte plus foncée pour les en-têtes */
        }

        #tableau-specifique tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        #tableau-specifique tr:hover {
            background-color: #f2f2f2; /* Légère modification de couleur au survol */
        }

    </style>
    
    <table id="tableau-specifique">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>date début</th>
                <th>date fin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.id }}</td>
                    <td>{{ event.nomEvent }}</td>
                    <td>{{ event.start|date('Y-m-d') }}  à  {{ event.start|date('H:i:s') }}</td>
                    <td>{{ event.end|date('Y-m-d') }}  à  {{ event.end|date('H:i:s') }}</td>
                    <td>
                        <a href="{{ path('app_afficherParticipant',{'id':event.id})}}" class="btn btn-primary">Voir Participants</a>
                        <a href="{{ path('app_adminEditEvent',{'id':event.id})}}" class="btn btn-warning">Modifier</a>
                        <a href="{{ path('app_adminDeleteEvent',{'id':event.id})}}" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
    {% endif %}
    <h1 style="text-align: center; margin-top: 90px; margin-bottom: 10px;">Calendrier des évènements</h1>
