  <link href="{{ asset( 'css/styles.css')}}" rel="stylesheet" />
    </head>
    <body>
        <header>
            <h1 class="site-heading text-center text-faded d-none d-lg-block">
                <span class="site-heading-upper text-primary mb-3">Protégeons la nature, préservons notre avenir</span>
                <span class="site-heading-lower">The Tree Well</span>
            </h1>
        </header>
        <!-- Navigation-->
        
        
        
            <div class="container">
                
                    <div class="col-xl-9 mx-auto">
                       
                        {% block body %}
                        
                        <section class="page-section cta">
                            
            <div class="container">
                <div class="row">
                    <div class="col-xl-9 mx-auto">
                        <div class="cta-inner bg-faded text-center rounded">
                            <h2 class="section-heading mb-4">
                                
                                <h1>Les puits de la nappe selectionnée</h1>
                                <table border="3" class=centriq >
                            <thead>
                                <tr>
                                    
                                    <th>Identifiant du puits</th>
                                    <th>Diamètre</th>
                                    <th>Date de fabrication</th>
                                    <th>Type d'aquifères</th>
                                    <th>Catégorie</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                <!-- JOINTURE avec idpuits(OneToMany in nappe.php) -->
                                {% for a in nappe.idpuits %}
                                <tr>
                                    
                                    <td>{{ a.idp }}</td>
                                    <td>{{ a.diametre }}</td>
                                    <td>{{ a.datefab|date('d-M-y') }}</td>

                                    
                                    <td>{{ a.debit }}</td>
                                    <td>{{ a.equipement }}</td>
                                </tr>
                                
                                {% endfor %}
                                
                            </tbody>
                        </table>
                        <a href ="{{path('nappe_show')}}"><button > Revenir aux nappes  </button></a>
                    </div>
                </div>
            </div>
        </div>
        

                        {% endblock %}

                    </div>
               
            </div>
        </section>
        <footer class="footer text-faded text-center py-5">
