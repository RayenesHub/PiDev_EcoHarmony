{# templates/quiz/result.html.twig #}

{% extends 'base2.html.twig' %}

{% block title %}Résultat du Quiz{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .result-page {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        text-align: center;
    }
    .result-container {
        padding: 2rem;
        border-radius: 8px;
        background: #fff;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        max-width: 600px;
        margin: 0 auto;
    }
    .result-container h1 {
        font-size: 2.5rem;
        color: #4CAF50;
        margin-bottom: 1rem;
    }
    .result-container p {
        font-size: 1.5rem;
        margin-bottom: 2rem;
    }
    .result-container a {
        display: inline-block;
        padding: 0.5rem 1rem;
        background-color: #4CAF50;
        color: #fff;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
    }
    .result-container a:hover {
        background-color: #43a047;
    }
</style>
{% endblock %}

{% block main_content %}
<div class="result-page">
    <div class="result-container">
        <h1>Félicitations !</h1>
        <p>Votre jardin idéal est : <strong>{{ recommendedGarden }}</strong></p>
        <a href="{{ path('app_quiz') }}">Refaire le quiz</a>
    </div>
</div>
{% endblock %}
