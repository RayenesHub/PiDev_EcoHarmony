{% extends "base_back.html.twig" %}
{%block body%}
{{ form_start(form,{attr:{novalidate:'novalidate'}} )}}
<div style="display: flex; justify-content: center;">

  <div class="card"  style="width: 18rem;align-items: center;justify-content: center;margin-top: 150px;padding: 10px; "   >
    <div class="form-group">
      <label for="exampleInputNomReserve">Nom Reserve</label>
      
      {{ form_widget(form.nomReserve,{'attr':{'class':'form-control'}}) }}
      {{ form_errors(form.nomReserve,{'attr':{'class':'form-danger'}}) }}

      
      
    </div>
    <div class="form-group">
      <label for="exampleInputCapacite">Capacite</label>
      
      {{ form_widget(form.Capacite,{'attr':{'class':'form-control'}}) }}
      {{ form_errors(form.Capacite,{'attr':{'class':'form-danger'}}) }}

      
    </div>
    <div class="form-group">
      <label for="exampleInputLieu">Lieu</label>
      
      {{ form_widget(form.Lieu,{'attr':{'class':'form-control'}}) }}
      {{ form_errors(form.Lieu,{'attr':{'class':'form-danger'}}) }}

    </div>
    
    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center;padding: 10px;">
      {{ form_widget(form.save,{'attr':{'class':'btn btn-primary'}}) }}
    </div>
    <div> <a class="btn btn-success" href="{{path('app_reserve')}}">afficher les reserve</a></div>
    <div ><a class="" href="{{path('addformanimal')}}">ajouter un animal</a></div></div>
    {{form_end(form)}}
  </div>
  
  
  
</div>
  {% endblock %}