</div>
<br>

<div class="form-group">
    {{ form_widget(form.numerotel, {'attr': {'class': 'input-field', 'placeholder': 'Numero  de telephone'}}) }}
    <i class="bx bx-envelope white-text"></i>
    <div class="white-text">{{ form_errors(form.numerotel) }}</div>
</div>
<br>

<div class="form-group">
    {{ form_widget(form.mdp.first, {'attr': {'class': 'input-field', 'placeholder': 'Mot de passe'}}) }}
