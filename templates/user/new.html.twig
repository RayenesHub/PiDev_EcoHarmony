    <div class="white-text">{{ form_errors(form.mdp) }}</div>
</div>
<br>

<div class="form-group">
    {{ form_widget(form.mdp.second, {'attr': {'class': 'input-field', 'placeholder': 'Mot de passe'}}) }}
    <i class="bx bx-envelope white-text"></i>
    <div class="white-text">{{ form_errors(form.mdp) }}</div>
</div>
<br>
<div class="form-group">
    {{ form_row(form.image, {'attr': {'class': 'form-control'}}) }}
</div>
<br>
<br>
<div class="form-group">
    <div class="input-box">
                <button type="submit" class="submit">Register</button>
            </div>
</div>
    {{ form_end(form) }}
</div>
        </div>
    </div>
</div>
{% endblock %}
