{% extends 'baseBack.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
   <h1>Utilisateur</h1>

<table class="table mx-5 w-75">
    <tbody>
        <tr>
            <th>ID</th>
            <td>{{ user.id }}</td>
        </tr>

        <tr>
            <th>CIN</th>
            <td>{{ user.cin }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ user.nom }}</td>
        </tr>
        <tr>
            <th>Prénom</th>
            <td>{{ user.prenom }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Adresse</th>
            <td>{{ user.adresse }}</td>
        </tr>
        <tr>
            <th>Numéro de téléphone</th>
            <td>{{ user.numerotel }}</td>
        </tr>
        <tr>
            <th>Rôle</th>
            <td>{{ user.role }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td><img src="{{ asset('img/' ~ user.image) }}" alt="User Image" width="50" height="50"></td>
        </tr>

        <tr>
            <td colspan="2">
                <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Retour</a>
               
            </td>
        </tr>
          <td>
    <form action="{{ path('app_user_deleteback', {'id': user.id}) }}" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
        <button type="submit" class="btn btn-danger">
            <img src="{{ asset('supprimer.png') }}" style="width:42px;height:42px;border:0" alt="Delete User">
        </button>
    </form>
</td>
    </tbody>
</table>


   

    
{% endblock %}
